<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TeacherAddHomework">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/showstartdate"
            android:textSize="1sp"
            android:visibility="invisible"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/showsubdate"
            android:textSize="15sp"
            android:visibility="invisible"/>

        <RadioGroup
            android:id="@+id/group1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5sdp"
            android:weightSum="3"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/text"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                android:checked="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Text"
                android:textAllCaps="true"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/_10sdp"
                app:buttonTint="@android:color/black"
                tools:ignore="MissingPrefix" />


            <RadioButton
                android:id="@+id/pdf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pdf Link"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textSize="16sp"
                app:buttonTint="@android:color/black"
                tools:ignore="MissingPrefix"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/_5sdp"/>

            <RadioButton
                android:id="@+id/video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Video Link"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textSize="16sp"
                app:buttonTint="@android:color/black"
                tools:ignore="MissingPrefix"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/_5sdp"/>

        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/_300sdp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:text="Date"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="15dp"
                android:id="@+id/start"
                android:background="@drawable/shapeemail1"
                android:drawablePadding="10dp"
                android:hint="Start Date"
                android:textAlignment="center"
                android:drawableTint="@android:color/black"
                android:focusable="false"
                android:textStyle="bold"
                android:drawableLeft="@drawable/addbirth"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black"
                android:textColorHighlight="@android:color/black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="@dimen/_300sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_weight="1"
                android:text="Day"
                android:gravity="center"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:id="@+id/showday"
                android:layout_weight="1"
                android:text=""
                android:gravity="center"
                android:textColor="@android:color/black"
                android:layout_gravity="center"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAlignment="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/_300sdp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Section"
                    android:textColor="@android:color/holo_blue_dark"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textAlignment="center"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:background="@drawable/shapeemail1"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp">

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:id="@+id/s1"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/_300sdp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Standard"
                    android:textColor="@android:color/holo_blue_dark"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textAlignment="center"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:background="@drawable/shapeemail1"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp">

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:id="@+id/s2"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/_300sdp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Division"
                    android:textColor="@android:color/holo_blue_dark"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textAlignment="center"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:background="@drawable/shapeemail1"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp">

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:id="@+id/s3"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/_300sdp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Subject"
                    android:textColor="@android:color/holo_blue_dark"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textAlignment="center"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:background="@drawable/shapeemail1"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp">

                    <androidx.appcompat.widget.AppCompatSpinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:id="@+id/subject"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:text="Select Topic Name"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_gravity="center"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:background="@drawable/shapeemail1"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp">

                <androidx.appcompat.widget.AppCompatSpinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:id="@+id/topic"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:text="Enter Chapter/Content Name"
                android:textAlignment="center"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="17sp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:layout_weight="1"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="15dp"
                android:gravity="start"
                android:id="@+id/chapter"
                android:background="@drawable/shapeemail1"
                android:drawableTint="@android:color/black"
                android:drawablePadding="10dp"
                android:focusable="false"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black"
                android:textColorHighlight="@android:color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:text="Enter Homework/Pdf - Video Details"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_gravity="center"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"
                android:layout_weight="1"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="15dp"
                android:gravity="start"
                android:id="@+id/notice"
                android:background="@drawable/shapeemail1"
                android:drawableTint="@android:color/black"
                android:drawablePadding="10dp"
                android:focusable="false"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black"
                android:textColorHighlight="@android:color/black"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginTop="2dp"
                android:text="Note : If you are giving homework only in text then please do not enter anything on below field."
                android:textColor="@android:color/holo_red_dark"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textSize="12sp"
                android:textStyle="bold"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:text="Enter Pdf - Video Link"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="15dp"
                android:gravity="start"
                android:id="@+id/link"
                android:background="@drawable/shapeemail1"
                android:drawableTint="@android:color/black"
                android:drawablePadding="10dp"
                android:focusable="false"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black"
                android:textColorHighlight="@android:color/black"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/_300sdp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Submission Date"
                    android:textColor="@android:color/holo_blue_dark"
                    android:layout_gravity="center"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textAlignment="center"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:padding="15dp"
                    android:id="@+id/subdate"
                    android:background="@drawable/shapeemail1"
                    android:drawablePadding="10dp"
                    android:hint="Submission Date"
                    android:textAlignment="center"
                    android:drawableTint="@android:color/black"
                    android:focusable="false"
                    android:textStyle="bold"
                    android:drawableLeft="@drawable/addbirth"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/black"
                    android:textColorHighlight="@android:color/black"/>

            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:shadowColor="@android:color/transparent"
                android:padding="15dp"
                android:textStyle="bold"
                android:id="@+id/btn"
                android:textSize="20sp"
                android:layout_marginRight="@dimen/_50sdp"
                android:textColor="@android:color/white"
                android:layout_marginLeft="@dimen/_50sdp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shapelogin1"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>