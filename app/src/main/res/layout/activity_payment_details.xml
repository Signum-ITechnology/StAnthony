<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PaymentDetails">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    <lal.adhish.gifprogressbar.GifView
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_35sdp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:text=""
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@android:color/holo_green_dark"
        android:textAlignment="center"
        android:id="@+id/show"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@android:color/holo_blue_dark">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:background="@android:color/black">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/_5sdp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="21sp"
                    android:textStyle="bold"
                    android:text="ORDER ID"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textAlignment="center"
                    android:id="@+id/order"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@android:color/black"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    android:text=""
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textColor="@android:color/black"
                    android:textAlignment="center"
                    android:id="@+id/orderid"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="@dimen/_5sdp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="21sp"
                    android:textStyle="bold"
                    android:text="TRANSACTION ID"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textAlignment="center"
                    android:id="@+id/transaction"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@android:color/black"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="19sp"
                    android:textStyle="bold"
                    android:text=""
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textColor="@android:color/black"
                    android:textAlignment="center"
                    android:id="@+id/transactionid"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Note : Instruction's to get your fee receipt"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_10sdp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1 : Go to fee page"
        android:textColor="@android:color/black"
        android:textSize="13sp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_5sdp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2 : Click on paid fee details"
        android:textColor="@android:color/black"
        android:textSize="13sp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_2sdp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3 : Click on the receipt number according to date"
        android:textColor="@android:color/black"
        android:textSize="13sp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_2sdp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4 : Click on download receipt and your receipt is saved"
        android:textColor="@android:color/black"
        android:textSize="13sp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_2sdp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="5 : To open your saved receipt click on save open recipt"
        android:textColor="@android:color/black"
        android:textSize="13sp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_2sdp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="6 : In case your downloaded recipt does not open from there simply go to your mobiles file application and search for Shree Sanatan Dharam Fee Recipt folder"
        android:textColor="@android:color/black"
        android:textSize="13sp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_2sdp"/>

    </LinearLayout>

</ScrollView>