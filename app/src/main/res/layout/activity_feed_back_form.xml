<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FeedBackForm"
    android:id="@+id/id">


    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp">

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical">

         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="Enter Your Feedback"
             android:textColor="@color/colorPrimary"
             android:textAlignment="center"
             android:layout_marginTop="@dimen/_5sdp"
             android:textAllCaps="true"
             android:textStyle="bold"
             android:textSize="23sp"/>

         <EditText
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginLeft="10dp"
             android:layout_marginRight="10dp"
             android:layout_marginBottom="10dp"
             android:layout_marginTop="20dp"
             android:padding="15dp"
             android:id="@+id/text1"
             android:focusable="false"
             android:background="@drawable/shapeemail1"
             android:drawablePadding="10dp"
             android:hint="Enter Name"
             android:drawableTint="@android:color/black"
             android:inputType="text"
             android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
             android:textStyle="bold"
             android:drawableLeft="@drawable/student"
             android:textSize="20sp"
             android:textColor="@android:color/black"
             android:textColorHint="@android:color/black"
             android:textColorHighlight="@android:color/black"/>

         <EditText
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginLeft="10dp"
             android:layout_marginRight="10dp"
             android:layout_marginBottom="10dp"
             android:layout_marginTop="5dp"
             android:padding="15dp"
             android:focusable="false"
             android:id="@+id/text4"
             android:drawableTint="@android:color/black"
             android:background="@drawable/shapeemail1"
             android:drawablePadding="10dp"
             android:hint="Enter Email Id"
             android:textStyle="bold"
             android:drawableLeft="@drawable/addmail"
             android:textSize="20sp"
             android:textColor="@android:color/black"
             android:textColorHint="@android:color/black"
             android:textColorHighlight="@android:color/black"/>

         <EditText
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginLeft="10dp"
             android:layout_marginRight="10dp"
             android:layout_marginBottom="10dp"
             android:layout_marginTop="@dimen/_5sdp"
             android:padding="15dp"
             android:id="@+id/text2"
             android:focusable="false"
             android:background="@drawable/shapeemail1"
             android:drawablePadding="10dp"
             android:hint="Enter Subject"
             android:inputType="text"
             android:drawableTint="@android:color/black"
             android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
             android:textStyle="bold"
             android:drawableLeft="@drawable/homework"
             android:textSize="20sp"
             android:textColor="@android:color/black"
             android:textColorHint="@android:color/black"
             android:textColorHighlight="@android:color/black"/>

         <EditText
             android:layout_width="match_parent"
             android:layout_height="@dimen/_100sdp"
             android:layout_marginLeft="10dp"
             android:layout_marginRight="10dp"
             android:layout_marginBottom="10dp"
             android:layout_marginTop="@dimen/_5sdp"
             android:padding="15dp"
             android:focusable="false"
             android:id="@+id/text3"
             android:background="@drawable/shapeemail1"
             android:drawablePadding="10dp"
             android:hint="Enter Feedback"
             android:drawableTint="@android:color/black"
             android:inputType="text"
             android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ "
             android:textStyle="bold"
             android:drawableLeft="@drawable/addcomment"
             android:textSize="20sp"
             android:textColor="@android:color/black"
             android:textColorHint="@android:color/black"
             android:textColorHighlight="@android:color/black"/>

         <Button
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="Send Feedback"
             android:shadowColor="@android:color/transparent"
             android:padding="15dp"
             android:textStyle="bold"
             android:id="@+id/button"
             android:textSize="20sp"
             android:enabled="false"
             android:layout_marginRight="@dimen/_50sdp"
             android:layout_marginLeft="50dp"
             android:layout_marginBottom="10dp"
             android:textColor="@android:color/white"
             android:layout_marginTop="10dp"
             android:background="@drawable/shapelogin1"/>

     </LinearLayout>

</ScrollView>

</LinearLayout>