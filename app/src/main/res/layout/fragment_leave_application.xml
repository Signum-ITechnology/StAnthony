<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LeaveApplication">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Alloated &amp; Balance Leave Summary >"
            android:textColor="@android:color/holo_purple"
            android:textAlignment="center"
            android:id="@+id/leavesummary"
            android:layout_margin="@dimen/_5sdp"
            android:textSize="15sp"
            android:textStyle="bold"/>


        <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="Note: All the leaves should be applied before 1 PM"-->
            <!--android:textColor="@android:color/holo_red_light"-->
            <!--android:textAlignment="center"-->
            <!--android:textSize="13sp" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/_300sdp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Leave Type"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_gravity="center"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:background="@drawable/shapeemail1"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp">

                <androidx.appcompat.widget.AppCompatSpinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:id="@+id/type"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:id="@+id/desc"
            android:textAlignment="center"
            android:textSize="13sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="@dimen/_300sdp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Adjusting With"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_gravity="center"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginTop="5dp"
                android:padding="15dp"
                android:focusable="false"
                android:id="@+id/name"
                android:layout_weight="1"
                android:textAlignment="center"
                android:background="@drawable/shapeemail1"
                android:drawablePadding="10dp"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black"
                android:textColorHighlight="@android:color/black"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Type None If No Adjusting Faculty is Available"
            android:textColor="@android:color/holo_red_light"
            android:textAlignment="center"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/_300sdp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:text="Apply From"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_gravity="center"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="15dp"
                android:id="@+id/firststart"
                android:background="@drawable/shapeemail1"
                android:drawablePadding="10dp"
                android:hint="Start Date"
                android:textAlignment="center"
                android:drawableTint="@android:color/black"
                android:focusable="false"
                android:textStyle="bold"
                android:drawableLeft="@drawable/addbirth"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black"
                android:textColorHighlight="@android:color/black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/_300sdp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:text="Apply Till"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_gravity="center"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="15dp"
                android:id="@+id/seconddate"
                android:background="@drawable/shapeemail1"
                android:drawablePadding="10dp"
                android:hint="End Date"
                android:textAlignment="center"
                android:drawableTint="@android:color/black"
                android:focusable="false"
                android:textStyle="bold"
                android:drawableLeft="@drawable/addbirth"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black"
                android:textColorHighlight="@android:color/black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:layout_width="@dimen/_300sdp"
                android:layout_height="@dimen/_40sdp"
                android:layout_weight="1"
                android:text="Days"
                android:gravity="center"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_gravity="center"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:id="@+id/showday"
                android:layout_weight="1"
                android:text=""
                android:gravity="center"
                android:textColor="@android:color/black"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textAlignment="center"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Enter Reason Below"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_gravity="center"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textAlignment="center"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200sdp"
            android:layout_weight="1"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="15dp"
            android:gravity="start"
            android:id="@+id/reason"
            android:background="@drawable/shapeemail1"
            android:drawableTint="@android:color/black"
            android:drawablePadding="10dp"
            android:focusable="false"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:textColorHighlight="@android:color/black"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apply"
            android:shadowColor="@android:color/transparent"
            android:padding="15dp"
            android:textStyle="bold"
            android:id="@+id/btn"
            android:textSize="20sp"
            android:layout_marginRight="@dimen/_50sdp"
            android:textColor="@android:color/white"
            android:layout_marginLeft="@dimen/_50sdp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shapelogin1"/>

    </LinearLayout>

</ScrollView>